@model HairSaloon_Website.ViewModels.AssignAdminRoleViewModel

<h2>Assign Admin Role</h2>

<form asp-action="AssignAdminRole" method="post">
    <div class="form-group">
        <label asp-for="UserEmail"></label>
        <input asp-for="UserEmail" class="form-control" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Assign Admin Role</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">
        @ViewBag.Message
    </div>
}

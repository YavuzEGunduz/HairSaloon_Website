@model List<Employee>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #2c3e50;
            color: #ecf0f1;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
            background-color: #34495e;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #ecf0f1;
            font-size: 2.5em;
            font-weight: bold;
            text-shadow: 2px 2px 0 #e74c3c, 4px 4px 0 #3498db, 6px 6px 0 #f1c40f;
        }

        .table thead th {
            background-color: #34495e;
            color: #ecf0f1;
            text-align: center;
        }

        .table tbody td {
            background-color: #2c3e50;
            color: #ecf0f1;
            text-align: center;
        }

        .btn {
            font-size: 14px;
            padding: 5px 10px;
        }

        .btn-warning {
            background-color: #f39c12;
            border-color: #f39c12;
            color: #2c3e50;
        }

            .btn-warning:hover {
                background-color: #e67e22;
                border-color: #e67e22;
            }

        .btn-danger {
            background-color: #e74c3c;
            border-color: #e74c3c;
            color: #ecf0f1;
        }

            .btn-danger:hover {
                background-color: #c0392b;
                border-color: #c0392b;
            }

        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
            color: #ecf0f1;
            width: 100px;
            margin-top: 20px;
        }

            .btn-primary:hover {
                background-color: #2980b9;
                border-color: #2980b9;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Employee Management</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>İsim</th>
                    <th>Yaş</th>
                    <th>İşlemler</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Name</td>
                        <td>@employee.Age</td>
                        <td>@employee.Id</td>
                        <td><a href="/Employee/BringEmployee/@employee.Id" class="btn btn-warning">Edit</a></td>
                        <td><a href="/Employee/DeleteEmployee/@employee.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Employee/AddEmployee/" class="btn btn-primary">Ekle</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

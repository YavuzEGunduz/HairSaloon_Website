@model List<Employee>

<h2>Çalışan Yönetim Paneli</h2>

<form asp-action="AddEmployee" method="post" class="mb-4">
    <div class="form-group mb-2">
        <input type="text" name="Name" placeholder="İsim" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <input type="number" name="Age" placeholder="Yaş" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <input type="text" name="ImageUrl" placeholder="Resim Yolu" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Çalışan Ekle</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>İsim</th>
            <th>Yaş</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Age</td>
                <td>
                    <a href="/Employee/EditEmployee/@employee.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Employee/DeleteEmployee/@employee.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

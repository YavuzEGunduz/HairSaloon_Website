@model HairSaloon_Website.Models.Employee

@{
    ViewData["Title"] = "Yeni Çalışan Ekle";
    var processes = ViewBag.Processes as List<HairSaloon_Website.Models.Process>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yeni Çalışan Ekle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #2c3e50;
            color: #ecf0f1;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
            background-color: #34495e;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #ecf0f1;
            font-size: 2.5em; /* Daha büyük font */
            font-weight: bold; /* Daha kalın font */
            text-shadow: 2px 2px 0 #e74c3c, 4px 4px 0 #3498db, 6px 6px 0 #f1c40f;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            color: #ecf0f1;
            text-shadow: 2px 2px 0 #f39c12;
            font-weight: bold;
            letter-spacing: 1px;
            margin-bottom: 5px;
        }

        .input-box div {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .input-box input[type="checkbox"] {
            margin-right: 10px;
        }

        .btn-primary {
            background-color: #e74c3c;
            border-color: #e74c3c;
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            color: #ecf0f1;
            text-shadow: 2px 2px 0 #e74c3c;
        }

            .btn-primary:hover {
                background-color: #c0392b;
                border-color: #c0392b;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Yeni Çalışan Ekle</h2>
        <form asp-action="AddEmployee" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name">Adı</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Age">Yaşı</label>
                <input asp-for="Age" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ImageFile">Resim Yükle</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
            </div>
            <div class="input-box">
                @foreach (var process in processes)
                {
                    <div>
                        <input type="checkbox" name="selectedProcesses" value="@process.Id" />
                        <label>@process.pName</label>
                    </div>
                }
            </div>
            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@using HairSaloon_Website.Models
@model List<Employee>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Divs with Buttons</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid vh-100 d-flex flex-column">
        <div class="box">
			<label for="sel1">Choose Date </label>
			<input type="datetime-local" class="form-control" id="datetimeSelect" onchange="enableFields()" />
			<br
			<label for="sel1">Choose Process </label>
			<select class="form-control" id="sel1">
				@foreach (var employee in Model)
				{
					<option>@employee.Name</option>
				}
			</select>
			<br
			<label for="sel1">Select list (select one):</label>
			<select class="form-control" id="sel1">
				<option>1</option>
				<option>2</option>
				<option>3</option>
				<option>4</option>
			</select>

            <br>
            <button class="btn btn-primary">Button 1</button>
        </div>
        <div class="box">
            <button class="btn btn-primary">Button 2</button>
        </div>
    </div>

    <!-- Bootstrap JS (optional, for interactivity) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

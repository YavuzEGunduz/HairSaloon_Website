@model HairSaloon_Website.Models.Appointment
@{
    ViewData["Title"] = "Yeni Randevu";
    var processes = ViewData["Processes"] as List<HairSaloon_Website.Models.Process>;
}

<h2>Yeni Randevu Oluştur</h2>

<form asp-action="AddAppointment" method="post">
    <div class="form-group">
        <label asp-for="aDate">Randevu Tarihi</label>
        <input asp-for="aDate" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label asp-for="aProcessId">Hizmet Seçimi</label>
        <select asp-for="aProcessId" class="form-control" asp-items="@(new SelectList(processes, "Id", "Name"))" id="process-select"></select>
    </div>
    <div class="form-group">
        <label asp-for="aEmployeeId">Çalışan Seçimi</label>
        <select asp-for="aEmployeeId" class="form-control" id="employee-select"></select>
    </div>
    <button type="submit" class="btn btn-primary">Oluştur</button>
</form>

@section Scripts {
    <script>
        document.getElementById('process-select').addEventListener('change', function () {
            var processId = this.value;
            fetch('/Appointment/GetEmployeesByProcess?processId=' + processId)
                .then(response => response.json())
                .then(data => {
                    var employeeSelect = document.getElementById('employee-select');
                    employeeSelect.innerHTML = '';
                    data.forEach(employee => {
                        var option = document.createElement('option');
                        option.value = employee.id;
                        option.text = employee.name;
                        employeeSelect.appendChild(option);
                    });
                });
        });
    </script>
}

@model HairSaloon_Website.Models.Process

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Process</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #2c3e50;
            color: #ecf0f1;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
            background-color: #34495e;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #ecf0f1;
            font-size: 2.5em;
            font-weight: bold;
            text-shadow: 2px 2px 0 #e74c3c, 4px 4px 0 #3498db, 6px 6px 0 #f1c40f;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            color: #ecf0f1;
            text-shadow: 2px 2px 0 #f39c12;
            font-weight: bold;
            letter-spacing: 1px;
            margin-bottom: 5px;
        }

        .btn-default {
            background-color: #3498db;
            border-color: #3498db;
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            color: #ecf0f1;
            text-shadow: 2px 2px 0 #3498db;
            margin-top: 20px;
        }

            .btn-default:hover {
                background-color: #2980b9;
                border-color: #2980b9;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Edit Process</h2>
        @using (Html.BeginForm("EditProcess", "Process", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label asp-for="pName">Name</label>
                @Html.TextBoxFor(m => m.pName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Time">Time</label>
                @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Price">Price</label>
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
            </div>
            <button class="btn btn-default">Done</button>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

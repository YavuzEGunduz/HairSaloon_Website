@using HairSaloon_Website.Models
@using System.Globalization
@model List<Process>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Process List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #2c3e50;
            color: #ecf0f1;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
            padding: 20px;
            border-radius: 8px;
            background-color: #34495e;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #ecf0f1;
            font-size: 4em; /* Çok daha büyük font */
            font-weight: bold;
            letter-spacing: 2px; /* Harfler arasında boşluk */
            text-shadow: 2px 2px 0 #e74c3c, 4px 4px 0 #3498db, 6px 6px 0 #f1c40f;
        }

        .process-card {
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease;
            background-color: #ffffff; /* Kutuların içi beyaz */
            border: 2px solid #ecf0f1; /* Kenarlık beyaz */
        }

            .process-card img {
                width: 100%;
                height: 250px;
                object-fit: cover;
            }

            .process-card:hover {
                transform: translateY(-5px);
            }

        .process-details {
            padding: 15px;
            text-align: center;
        }

            .process-details h5 {
                margin-bottom: 10px;
                color: #f1c40f; /* Sarı renk */
                text-shadow: 2px 2px 0 #e74c3c; /* Kırmızı gölge */
                font-weight: bold; /* Kalın yazı */
                font-size: 1.5em; /* Daha büyük yazı */
                letter-spacing: 0.1em; /* Harfler arası boşluk */
            }

            .process-details p {
                margin-bottom: 5px;
                color: #34495e; /* Yazı rengi mevcut temanın rengi */
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Our Processes</h2>
        <div class="row">
            @foreach (var process in Model)
            {
                <div class="col-md-4">
                    <div class="process-card">
                        <div class="process-details">
                            <h5>@process.pName</h5>
                            <p>@process.Price.ToString("C", CultureInfo.CreateSpecificCulture("en-US"))</p>
                            <p>@process.Time Minutes</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
